{
  "rewrites": [
    { 
      "source": "/update-password", 
      "destination": "/index.html",
      "headers": {
        "Cache-Control": "no-store, no-cache, must-revalidate, proxy-revalidate",
        "Pragma": "no-cache",
        "Expires": "0"
      }
    },
    { 
      "source": "/login", 
      "destination": "/index.html"
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html"
    }
  ]
}
