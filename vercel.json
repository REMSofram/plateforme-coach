{
  "rewrites": [
    { 
      "source": "/update-password", 
      "destination": "/index.html"
    },
    { 
      "source": "/login", 
      "destination": "/index.html"
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/update-password",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate, proxy-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    }
  ]
}
